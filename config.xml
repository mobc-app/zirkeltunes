<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        xmlns:android = "http://schemas.android.com/apk/res/android"
        id        = "de.mobC.zirkeltunes"
        version   = "2.5.0">
    <name>zirkeltunes</name>
    <description>
        zirkeltunes Player App
    </description>
    <author href="http://www.mobC.de" email="support@mobC.de">
        mobC Team
    </author>
    <content src="index.html" />
    <preference name="Orientation" value="landscape" />
    <preference name="Fullscreen" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
    <plugin name="cordova-plugin-console" source="npm" spec="~1.0.7"/>
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.6"/>
    <plugin name="cordova-plugin-device-motion" source="npm" spec="~1.2.5"/>
    <plugin name="cordova-plugin-device-orientation" source="npm" spec="~1.0.7"/>
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.3.3"/>
    <plugin name="cordova-plugin-file" source="npm" spec="~4.3.3"/>
    <plugin name="cordova-plugin-file-transfer" source="npm" spec="~1.6.3"/>
    <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.4.3"/>
    <plugin name="cordova-plugin-globalization" source="npm" spec="~1.0.7"/>
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.7.1"/>
    <plugin name="cordova-plugin-media" source="npm" spec="~3.0.1"/>
    <plugin name="cordova-plugin-media-capture" source="npm" spec="~1.4.3"/>
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.3.3"/>
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="~4.0.3"/>
    <preference name="SplashScreen" value="splash" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="500" />
    <preference name="ShowSplashScreenSpinner" value="true" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <plugin name="cordova-plugin-vibration" source="npm" spec="~2.1.5"/>
    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.2.3"/>
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.3.2"/>
    <allow-navigation href="http://*/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <access origin="*" /> 
    <platform name="android" >
    <preference name="minSdkVersion" value="14" />
    <allow-intent href="market:*" />
    <icon platform="android" src="res/icon/android/drawable-ldpi-icon.png"  density="ldpi"/>
    <icon platform="android" src="res/icon/android/drawable-mdpi-icon.png"  density="mdpi"/>
    <icon platform="android" src="res/icon/android/drawable-hdpi-icon.png"  density="hdpi"/>
    <icon platform="android" src="res/icon/android/drawable-xhdpi-icon.png"  density="xhdpi"/>
    <icon platform="android" src="res/icon/android/drawable-xxhdpi-icon.png"  density="xxhdpi"/>
    <icon platform="android" src="res/icon/android/drawable-xxxhdpi-icon.png"  density="xxxhdpi"/>
    <splash platform="android" src="res/screen/android/drawable-land-ldpi-screen.png"  density="land-ldpi"/>
    <splash platform="android" src="res/screen/android/drawable-land-mdpi-screen.png"  density="land-mdpi"/>
    <splash platform="android" src="res/screen/android/drawable-land-hdpi-screen.png"  density="land-hdpi"/>
    <splash platform="android" src="res/screen/android/drawable-land-xhdpi-screen.png"  density="land-xhdpi"/>
    <splash platform="android" src="res/screen/android/drawable-land-xxhdpi-screen.png"  density="land-xxhdpi"/>
    <splash platform="android" src="res/screen/android/drawable-land-xxxhdpi-screen.png"  density="land-xxxhdpi"/>
    <splash platform="android" src="res/screen/android/drawable-port-ldpi-screen.png"  density="port-ldpi"/>
    <splash platform="android" src="res/screen/android/drawable-port-mdpi-screen.png"  density="port-mdpi"/>
    <splash platform="android" src="res/screen/android/drawable-port-hdpi-screen.png"  density="port-hdpi"/>
    <splash platform="android" src="res/screen/android/drawable-port-xhdpi-screen.png"  density="port-xhdpi"/>
    <splash platform="android" src="res/screen/android/drawable-port-xxhdpi-screen.png"  density="port-xxhdpi"/>
    <splash platform="android" src="res/screen/android/drawable-port-xxxhdpi-screen.png"  density="port-xxxhdpi"/>
    </platform>
</widget>